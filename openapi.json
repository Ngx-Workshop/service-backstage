  "info": {
    "title": "NGX backstage API",
    "description": "",
    "version": "1.0.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "DocBlobDto": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "Raw content of the document"
          },
          "sha": {
            "type": "string",
            "description": "Git SHA of the fetched file"
          },
          "fetchedAt": {
            "type": "string",
            "format": "date-time"
          },
          "format": {
            "type": "string",
            "enum": [
              "yaml",
              "json",
              "markdown"
            ]
          }
        },
        "required": [
          "content"
        ]
      },
      "ServiceSummaryDto": {
        "type": "object",
        "properties": {
          "repoName": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "topics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "defaultBranch": {
            "type": "string"
          },
          "htmlUrl": {
            "type": "string"
          },
          "lastSyncAt": {
            "type": "string",
            "format": "date-time"
          },
          "syncStatus": {
            "type": "string",
            "enum": [
              "idle",
              "ok",
              "partial",
              "failed",
              "rate_limited"
            ]
          },
          "syncError": {
            "type": "string"
          },
          "readme": {
            "$ref": "#/components/schemas/DocBlobDto"
          },
          "openapi": {
            "$ref": "#/components/schemas/DocBlobDto"
          },
          "runbook": {
            "$ref": "#/components/schemas/DocBlobDto"
          },
          "serviceMetadata": {
            "$ref": "#/components/schemas/DocBlobDto"
          }
        },
        "required": [
          "repoName",
          "topics",
          "syncStatus"
        ]
      },
      "ServiceDetailDto": {
        "type": "object",
        "properties": {
          "repoName": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "topics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "defaultBranch": {
            "type": "string"
          },
          "htmlUrl": {
            "type": "string"
          },
          "lastSyncAt": {
            "type": "string",
            "format": "date-time"
          },
          "syncStatus": {
            "type": "string",
            "enum": [
              "idle",
              "ok",
              "partial",
              "failed",
              "rate_limited"
            ]
          },
          "syncError": {
            "type": "string"
          },
          "readme": {
            "$ref": "#/components/schemas/DocBlobDto"
          },
          "openapi": {
            "$ref": "#/components/schemas/DocBlobDto"
          },
          "runbook": {
            "$ref": "#/components/schemas/DocBlobDto"
          },
          "serviceMetadata": {
            "$ref": "#/components/schemas/DocBlobDto"
          }
        },
        "required": [
          "repoName",
          "topics",
          "syncStatus"
        ]
      },
      "SyncRequestDto": {
        "type": "object",
        "properties": {
          "repos": {
            "description": "Optional list of repo names to sync; defaults to all repos in the org",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "force": {
            "type": "boolean",
            "description": "Force re-fetch even if SHA is unchanged"
          }
        }
      },
      "SyncResponseDto": {
        "type": "object",
        "properties": {
          "total": {
            "type": "number"
          },
          "succeeded": {
            "type": "number"
          },
          "failed": {
            "type": "number"
          },
          "durationMs": {
            "type": "number",
            "description": "Duration in milliseconds"
          },
          "failures": {
            "description": "Repos that failed to sync (with error message inline if available)",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "total",
          "succeeded",
          "failed",
          "durationMs",
          "failures"
        ]
      }
    }
  }
